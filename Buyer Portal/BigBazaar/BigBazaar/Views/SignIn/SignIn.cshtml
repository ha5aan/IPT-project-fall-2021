@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text&family=DM+Sans:wght@500&family=Heebo&family=KoHo:wght@600&family=M+PLUS+Rounded+1c:wght@500&family=Noto+Sans+JP:wght@300&family=Poppins:wght@300&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Styles/SignIn.css">
</head>

<body>
    <div class="header">
        <img class="logo" src="~/logo.png" alt="">
        <a href="/" style="margin-left: 170px;">SHOP NOW</a>
        <a href="/aboutus">ABOUT US</a>
        <div class="dropdown">
            <button class="dropbtn">CUSTOMER SUPPORT</button>
            <div class="dropdown-content" style="opacity: 1;margin-left: -30px;">
                <a href="/privacy"><i class="fas fa-shield-check"></i>&nbsp;&nbsp; Privacy and Security</a>
                <a href="/contact"><i class="fas fa-user-headset"></i>&nbsp;&nbsp; Contact Us</a>
                <a href="/order"><i class="fas fa-box"></i>&nbsp;&nbsp; Order</a>
                <a href="/shipping"><i class="fas fa-truck"></i>&nbsp;&nbsp; Shipping & Delivery</a>
                <a href="/payment"><i class="fab fa-cc-visa"></i>&nbsp;&nbsp; Payment</a>
                <a href="/return"><i class="fas fa-undo-alt"></i>&nbsp;&nbsp; Return</a>
            </div>
        </div>
        <a href="#">SELL ON BIG BAZAR</a>
        <a href="/login">LOGIN</a>
        <a href="/register"> SIGNUP</a>

    </div>

    @if (ViewBag.error == false)
    {
        <script>
            alert("Invalid Email Id or Password");
        </script>
    }


    <div class="container" style="margin-top:16px;">
        <img style="width: 100%; height:690px;" src="~/banner4.png" alt="">
        <div class="sub-container">
            <div class="right-container">
                <img style="width: 350px; height: 460px;" src="~/login2.jpg" alt="">
            </div>
            <div class="left-container">
                <form action='/SignIn/Signin' method="POST">

                    <div style="padding-top: 10px;">

                        <center>
                            <h1 style="font-family: 'M PLUS Rounded 1c', sans-serif;">Sign In</h1>
                        </center>

                        <div class="input-container" style="margin-top:40px">
                            <label for="email">
                                <h4 style="font-family: 'Heebo', sans-serif;">Email Address <sup><i style="font-size:8px;" class="fas fa-star-of-life"></i></sup></h4>
                            </label>
                            <div class="input-container-style">
                                <i class="fa fa-user icon"></i>&nbsp;&nbsp;
                                <input type="email" placeholder="Please enter your email address" name="email" id=email required>
                            </div>
                        </div>



                        <div class="input-container spc">
                            <label for="pswd">
                                <h4 style="font-family: 'Heebo', sans-serif;">Password <sup><i style="font-size:8px;" class="fas fa-star-of-life"></i></sup></h4>
                            </label>
                            <div class="input-container-style">
                                <i class=" fa fa-lock icon"></i> &nbsp;&nbsp;
                                <input type="password" placeholder="Please enter your Password" name="psw" id=pswd required>
                            </div>
                        </div>



                        <center><button class="signin" type="submit">Sign In</button></center>


                        <div class="input-container spc" style="padding-right: 140px;margin-top: 10px;">
                            <h4 class="pass">
                                <span style="font-family: 'DM Sans', sans-serif; font-size: 13px;  padding-left: 10px;">Please signup if you don't have an Account? </span> <br> <br>
                                <center>
                                    <button class="pass-btn"><a style="text-decoration: none;color: white;" href="/register">CLICK ME !</a></button>
                                </center>
                            </h4>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="footers">
        <footer style="text-align: left;">
            &copy; Copyright 2021 <span style="color:#92e3f0; font-size:18px;font-family: 'Heebo', sans-serif;">BIG BAZAAR</span>
            <span style="padding-left: 1175px;">

                <a href="#">
                    <i style="color: white; font-size:20px;" class="fab fa-twitter"></i>
                </a>
                <a href="#">
                    <i style="color: white; font-size:20px;" class="fab fa-linkedin"></i>
                </a>

                <a href="#">
                    <i style="color: white; font-size:20px" class="fab fa-facebook"></i>
                </a>

                <a href="#">
                    <i style="color: white; font-size:20px" class="fab fa-medium"></i>
                </a>

            </span>
        </footer>

    </div>




</body>

</html>

