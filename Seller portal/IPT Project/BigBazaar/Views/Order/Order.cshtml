@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Out</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@1,700&family=Nova+Round&family=Poppins:wght@400&family=Roboto+Mono:ital,wght@1,300&family=Roboto+Slab&family=Crimson+Text&family=DM+Sans:wght@500&family=Heebo&family=KoHo:wght@600&family=M+PLUS+Round&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Styles/order.css">
</head>

<body>
    <div class="header">

        <a href="/">SHOP NOW</a>
        <a href="/aboutus">ABOUT US</a>
        <div class="dropdown">
            <button class="dropbtn">CUSTOMER SUPPORT</button>
            <div class="dropdown-content" style="opacity: 1;margin-left: 12px;">
                <a href="/privacy"><i class="fas fa-shield-check"></i>&nbsp;&nbsp; Privacy and Security</a>
                <a href="/contact"><i class="fas fa-user-headset"></i>&nbsp;&nbsp; Contact Us</a>
                <a href="/order"><i class="fas fa-box"></i>&nbsp;&nbsp; Order</a>
                <a href="/shipping"><i class="fas fa-truck"></i>&nbsp;&nbsp; Shipping & Delivery</a>
                <a href="/payment"><i class="fab fa-cc-visa"></i>&nbsp;&nbsp; Payment</a>
                <a href="/return"><i class="fas fa-undo-alt"></i>&nbsp;&nbsp; Return</a>
            </div>
        </div>
        <a href="#">SELL ON BIG BAZAR</a>
       
        <div class="dropdown">
            <button class="dropbtn">MY ACCOUNT</button>
            <div class="dropdown-content" style="opacity: 0.9;margin-left: -30px;">
                <a href="/profile"><i class="far fa-user-circle"></i>&nbsp;&nbsp; Account Info</a>
                <a href="/trackorder"><i class="fas fa-truck-moving"></i>&nbsp;&nbsp; Track my Order</a>
                <a href="/logout"><i class="fas fa-sign-out"></i>&nbsp;&nbsp; Logout</a>
            </div>
        </div>

    </div>


    <div class="navbar" id="navbar">
       @* <a href="/"><img style="padding: 12px 0px 0px 10px; width:60%;border:none" src="../../static/images/logo.png" alt=""></a>*@

    </div>


    <div class="container">
       
        <div class="side-menu">

            <div class="product ">
                <div class="picture"><img src=@ViewBag.productLink alt=""></div>
                <div class="content">
                    <p>

                        <span style="font-family: 'M PLUS Rounded 1c', sans-serif; font-size: 20px;"><b>Product Information</b></span>
                        <hr style="border:2px solid #3d84b8; border-radius: 5px; width: 46%; margin-top: 6px; margin-bottom: 15px;">
                        <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Product Name: </span> <span style="font-size:17px; font-family: 'Poppins', sans-serif;">@ViewBag.productName</span> <br>

                        <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Rent for </span><span style="font-size:18px; font-family: 'Poppins', sans-serif;">@ViewBag.productDays</span> <span style="font-family: 'Heebo', sans-serif;font-size:18px;"> days is: </span> <span style="font-size:18px; font-family: 'Poppins', sans-serif;">@ViewBag.productPrice</span> <br>

                        <br><br><span style="font-family: 'M PLUS Rounded 1c', sans-serif; font-size: 20px;"> <b>Seller Information</b></span>
                        <hr style="border:2px solid #3d84b8; border-radius: 5px; width: 46%; margin-top: 6px; margin-bottom: 15px;">
                        <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Seller Name: </span> <span style="font-size:18px; font-family: 'Poppins', sans-serif;">@ViewBag.SellerName</span> <br>
                        <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Email: </span>  <span style="font-size:18px; font-family: 'Poppins', sans-serif;">@ViewBag.SellerEmail</span>
                    </p>
                </div>

            </div>
@*            <h1>
                
            hello
        </h1>*@
        </div><div class="sub-container">

                  <div class="content">

                      <span style="font-family: 'M PLUS Rounded 1c', sans-serif; font-size: 20px; margin-left: 10px;"><b>Shipping Details</b></span>
                      <hr style="border:2px solid #3d84b8; border-radius: 5px; width: 30%; margin-top: 6px; margin-bottom: 15px; margin-left: 10px;">
                      <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px; ">Customer Name: </span> <span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 10px;">@ViewBag.customerName</span> <br>
                      <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Email Address: </span><span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 10px;">@ViewBag.customerEmail</span>  <br>
                      <div style="margin-left: 10px;"><span style="font-family: 'Heebo', sans-serif;font-size:18px;">Customer Address: </span> <span style="font-size:16px; font-family: 'Poppins', sans-serif; ">@ViewBag.customerAddress</span></div>
                      
                        
                              @if (ViewBag.totalPrice == null)
                              {
                                  <form action='/Order/Order' method="POST">
                                      <div class=" input-container">
                                          <label for="shipadd">
                                              <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;"><b>Shipping Address: <sup><i style="font-size:8px;" class="fas fa-star-of-life"></i></sup></b></span>
                                          </label>
                                          <div class="input-container-style">
                                              <i class="fa fa-user icon" style="font-size: 30px; margin-top: 15px; margin-left: 5px"></i>&nbsp;&nbsp;
                                              <input type="text" placeholder="Please enter shipping your address" name="shipadd" id=shipadd required>
                                          </div>
                                      </div>
                                      <div class=" input-container">
                                          <label for="days">
                                              <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;"><b>Days For Rent: <sup><i style="font-size:8px;" class="fas fa-star-of-life"></i></sup></b></span>
                                          </label>
                                          <div class="input-container-style">
                                              <i class="fas fa-calendar-day" style="font-size:30px; margin-top: 15px; margin-left: 5px"></i>&nbsp;&nbsp;
                                              <input type="number" placeholder="Number of Days you want to rent item" name="days" id=days required>
                                          </div>
                                      </div>
                                      <center><button class="signin" type="submit" name="productID" value=@ViewData["productID"]>Submit</button></center>
                                  </form>
                              }

                              @if (ViewBag.totalPrice != null)
                              {

                                  <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Shipping Address: </span><span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 20px;">@ViewBag.shipadd</span> <br>


                          <form action='/SignIn/Signin' method="POST">


                              <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Price: </span><span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 20px;">@ViewBag.totalPrice</span> <br>
                              <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Shipping Fee: </span><span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 20px;">60</span> <br>
                              <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Total Price: </span><span style="font-size:16px; font-family: 'Poppins', sans-serif; margin-left: 20px;">@ViewBag.totalShippingPrice</span> <br>

                              <button class="signin" type="submit" name="checkOut" value=ViewData["productID"]>Check Out</button>


                          </form>
                      }

                          </div>

        </div>
 
</div>



    <div class="footers">
        <footer style="text-align: left;">
            &copy; Copyright 2021 <span style="color:#ccf2f4; font-size:18px;font-family: 'Heebo', sans-serif;">BIG BAZAAR</span>
            <span style="padding-left: 1170px;">

