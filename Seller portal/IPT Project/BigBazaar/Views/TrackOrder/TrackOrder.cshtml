@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Orders</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text&family=DM+Sans:wght@500&family=Heebo&family=KoHo:wght@600&family=M+PLUS+Round<link rel=" preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@1,700&family=Nova+Round&family=Poppins:wght@400&family=Roboto+Mono:ital,wght@1,300&family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Styles/TrackOrder.css">
</head>

<body>
    <div class="header">

        <a href="/">SHOP NOW</a>
        <a href="/aboutus">ABOUT US</a>
        <div class="dropdown">
            <button class="dropbtn">CUSTOMER SUPPORT</button>
            <div class="dropdown-content" style="opacity: 1;margin-left: 12px;">
                <a href="/privacy"><i class="fas fa-shield-check"></i>&nbsp;&nbsp; Privacy and Security</a>
                <a href="/contact"><i class="fas fa-user-headset"></i>&nbsp;&nbsp; Contact Us</a>
                <a href="/order"><i class="fas fa-box"></i>&nbsp;&nbsp; Order</a>
                <a href="/shipping"><i class="fas fa-truck"></i>&nbsp;&nbsp; Shipping & Delivery</a>
                <a href="/payment"><i class="fab fa-cc-visa"></i>&nbsp;&nbsp; Payment</a>
                <a href="/return"><i class="fas fa-undo-alt"></i>&nbsp;&nbsp; Return</a>
            </div>
        </div>
        <a href="#">SELL ON BIG BAZAR</a>
        <div class="dropdown">
            <button class="dropbtn">MY ACCOUNT</button>
            <div class="dropdown-content" style="opacity: 0.9;margin-left: -30px;">
                <a href="/profile"><i class="far fa-user-circle"></i>&nbsp;&nbsp; Account Info</a>
                <a href="/trackorder"><i class="fas fa-truck-moving"></i>&nbsp;&nbsp; Track my Order</a>
                <a href="/logout"><i class="fas fa-sign-out"></i>&nbsp;&nbsp; Logout</a>
            </div>
        </div>
    </div>



    <div class="container">

        <div class="product">
            <div class="picture"><img src="{{record[4]}}" alt=""></div>
            <div class="content">
                <p>
                    <br>
                    <span style="font-family: 'M PLUS Rounded 1c', sans-serif; font-size: 20px; margin-left: 10px;"><b>Order Information</b></span>
                    <hr style="border:2px solid #3d84b8; border-radius: 5px; width: 120px; margin-top: 6px; margin-bottom: 15px; margin-left: 10px;">
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Product Name: </span> <span style="font-size:17px; font-family: 'Poppins', sans-serif;">{{record[2]}}</span> <br>
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Shipping Address: </span><span style="font-size:18px; font-family: 'Poppins', sans-serif;">{{record[8]}}</span>  <br>
                    {% if record[6] == 'yes' %}
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Product is donated by seller</span><br>
                    {% else %}
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Price: </span><span style="font-size:18px; font-family: 'Poppins', sans-serif;">{{record[3]}}</span> <br>
                    {% endif %}
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Category: </span><span style="font-size:18px; font-family: 'Poppins', sans-serif;">{{record[5]}}</span>  <br>
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Seller Name: </span> <span style="font-size:18px; font-family: 'Poppins', sans-serif;">{{record[7]}}</span> <br>
                    <span style="font-family: 'Heebo', sans-serif;font-size:18px; margin-left: 10px;">Order Status: </span> <span style="font-size:18px; font-family: 'Poppins', sans-serif;">{{record[1]}}</span> <br>
                </p>




            </div>


        </div>

        <p style="font-size:40px; font-family: 'Poppins', sans-serif; padding-left: 10px;padding-right: 10px; padding-top:30px">
            <b>NO ORDERS PLACED YET</b>
        </p>
    </div>




    <div class="footers">
        <footer style="text-align: left;">
            &copy; Copyright 2021 <span style="color:#ccf2f4; font-size:18px;font-family: 'Heebo', sans-serif;">BIG BAZAAR</span>
            <span style="padding-left: 990px;">

                <a href="#">
                    <i style="color: white; font-size:20px;" class="fab fa-twitter"></i>
                </a>
                <a href="#">
                    <i style="color: white; font-size:20px;" class="fab fa-linkedin"></i>
                </a>

                <a href="#">
                    <i style="color: white; font-size:20px" class="fab fa-facebook"></i>
                </a>

                <a href="#">
                    <i style="color: white; font-size:20px" class="fab fa-medium"></i>
                </a>

            </span>
        </footer>

    </div>


    <script>
        window.onscroll = function() {
            myFunction()
        };

        var header = document.getElementById("navbar");
        var sticky = header.offsetTop;

        function myFunction() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }
    </script>
